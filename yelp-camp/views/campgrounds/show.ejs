<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
      <!-- MAP -->
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" 
             src="<%= campground.image %>" 
             alt="Image of campground <%= campground.name %>">
        <div class="caption-full">
          <h4 class="pull-right">$9.00/night</h4>
          <h4><a><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
          <% if (campground.author.username) { %>
            <p>Submitted by: <strong><%= campground.author.username %></strong></p>
          <% } else { %>
            <p>Submitted by: <em>(Unknown user)</em></p>
          <% } %>
          <a href="/campgrounds/<%= campground._id %>/edit"
             class="btn btn-xs btn-warning">Edit</a>
          <!-- must use form to use method-override to send DELETE action -->
          <form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
            <button class="btn btn-xs btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a href="/campgrounds/<%= campground._id %>/comments/new" 
             class="btn btn-success">Add Comment</a>
        </div>
        <hr>
        <% campground.comments.forEach((comment) => { %>
          <div class="row">
            <div class="col-md-12">
              <% if (comment.author.username) { %>
                <strong><%= comment.author.username %></strong>
              <% } else { %>
                <em>(Unknown user)</em>
              <% } %>
              <span class="pull-right">10 days ago</span>
              <p><%= comment.text %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
