<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Add a Comment to <%= campground.name %></h1>
    <div style="width:30%; margin:25px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <!-- note the "comment[text]" : -->
                <input class="form-control" type="text" name="comment[text]" placeholder="Text">
            </div>
            <div class="form-group">
                <!-- note the "comment[author]" : -->
                <input class="form-control" type="text" name="comment[author]" placeholder="Author">
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back to Campgrounds List</a>
    </div>
</div>

<% include ../partials/footer %>
