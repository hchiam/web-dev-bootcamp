<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center;">Edit Comment</h1>
    <div style="width:30%; margin:25px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <!-- note the "comment[text]" : -->
                <input class="form-control" type="text" name="comment[text]" placeholder="Text" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back to Campgrounds List</a>
    </div>
</div>

<% include ../partials/footer %>
