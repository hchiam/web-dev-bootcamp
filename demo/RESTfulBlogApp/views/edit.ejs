<% include ./partials/header.ejs %>

<div class="ui main text container segment">
  <h1 class="ui huge header">Edit <%= blog.title %></h1>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input required type="text" 
             name="blog[title]" 
             placeholder="Title" 
             value="<%= blog.title %>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" 
             name="blog[image]" 
             placeholder="Image URL" 
             value="<%= blog.image %>">
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea required 
                name="blog[body]" 
                placeholder="Blog post content goes here"><%= blog.body %></textarea>
      <!-- textarea "value" is actually between its tags -->
    </div>
    <input class="ui blue big basic button" type="submit">
  </form>
</div>

<% include partials/footer %>
