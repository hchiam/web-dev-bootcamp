<% include ./partials/header.ejs %>

<main class="ui main text container segment">
  <h1 class="ui huge header"><%= blog.title %></h1>
  <div class="ui top attached item">
    <img class="ui centered rounded image" 
          alt="blog image" 
          src="<%= blog.image %>" 
          style="max-height: 10em;">
    <span class="content" role="note"><%= blog.created.toDateString() %></span>
    <!-- use Moment.js to get better format -->
    <p class="description"><%- blog.body %></p>
    <!-- < % - actually evaluates the code (BUT SANITIZE FOR SCRIPTS) -->

    <a class="ui orange basic button" 
       role="button" 
       href="/blogs/<%= blog._id %>/edit">Edit</a>

    <!-- will override POST as DESTROY -->
    <form id="delete" 
          action="/blogs/<%= blog._id %>?_method=DELETE" 
          method="POST">
      <button class="ui red basic button">Delete</button>
    </form>
  </div>
</main>

<% include partials/footer %>
