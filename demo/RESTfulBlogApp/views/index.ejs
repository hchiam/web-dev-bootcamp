<% include ./partials/header %>

<h1>INDEX PAGE!!!</h1>

<% blogs.forEach(function (blog) { %>
  <div>
    <h2><%= blog.title %></h2>
    <img src="<%= blog.image %>" style="max-height: 10em;">
    <span><%= blog.created %></span>
    <p><%= blog.body.length > 25 ? blog.body.substring(0,25) + '...' : blog.body %></p>
    <a href="/blogs/<%= blog._id %>">Read more</a>
  </div>
<% }); %>

<% include ./partials/footer %>
